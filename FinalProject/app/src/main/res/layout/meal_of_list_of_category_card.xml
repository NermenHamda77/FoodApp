<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:id="@+id/card_meal_loca"
    app:cardCornerRadius="25dp"
    app:cardElevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll_of_loca_meals"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_meal_loca"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/tv_meal_loca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@color/simon3"
            android:gravity="center"
            android:textSize="20sp"
            android:padding="5dp"/>
        <Button
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/simon2"
            android:text="@string/add_to_plan_title"
            android:layout_margin="10dp"
            android:id="@+id/btn_add_plan_cat"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>

